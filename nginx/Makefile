# Init
init:
	@echo "–°–æ–∑–¥–∞–Ω–∏–µ —Å–µ—Ç–∏ proxy"
	$(MAKE) nginx-network
	@echo "–ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è nginx"
	$(MAKE) up
	@echo ""
	@echo "‚úÖ Nginx Proxy Manager –∑–∞–ø—É—â–µ–Ω!"
	@printf "\033]8;;http://localhost:81\007üåê –ü–∞–Ω–µ–ª—å —É–ø—Ä–∞–≤–ª–µ–Ω–∏—è\033]8;;\007\n"
	@echo "üë§ –õ–æ–≥–∏–Ω: admin@example.com"
	@echo "üîë –ü–∞—Ä–æ–ª—å: changeme"

# Docker
up:
	docker compose -f docker-compose.yml up -d --build

down:
	docker compose -f docker-compose.yml down --remove-orphans

start:
	docker compose -f docker-compose.yml start

stop:
	docker compose -f docker-compose.yml stop

clean:
	docker compose -f docker-compose.yml down -v

logs:
	docker compose -f docker-compose.yml logs -f

# Network
nginx-network:
	docker network create proxy || true

.PHONY: init up down start stop clean logs nginx-network
