[mysqld]

# Слушать все IP
bind-address = 0.0.0.0

# Увеличение максимального размера пакета
max_allowed_packet = 1G

# Таймаут соединения с клиентом
wait_timeout = 28800
interactive_timeout = 28800

# Настройка InnoDB для производительности
innodb_buffer_pool_size = 256M
innodb_log_file_size = 64M
innodb_flush_method = O_DIRECT
innodb_file_per_table = 1

# Отключение DNS-резолвинга для ускорения подключений
skip-name-resolve

# Логирование медленных запросов
slow_query_log = 1
slow_query_log_file = /var/log/mysql/mariadb-slow.log
long_query_time = 2

# Ограничение максимального количества соединений
max_connections = 200

# Оптимизация для Docker и виртуализации
innodb_flush_log_at_trx_commit = 2
sync_binlog = 0
